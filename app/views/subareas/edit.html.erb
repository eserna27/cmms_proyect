<%= provide(:title, "Editar subárea" ) %>
  <div class="page-header">
    <h1>
    	Editar subárea
    </h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
		 <div class="col-xs-13 col-md-9"> 
			 <%= form_for(@subarea) do |r| %>
          <div class="modal-body">     
              <h2 class="form-signin-heading">Teclee los datos</h2>
              Area: <%= r.label "area", @area.name %>
              <%= r.text_field :name, class: "form-control", placeholder: "Nombre con el que se conoce",
                                                  required: true, autofocus: true %>
              <%= r.hidden_field :area_id, :value => @area.id %>
          </div>
          <div class="modal-footer">
            <%= r.submit "Guardar", class: "btn btn-primary" %> 
          </div>
        <% end %>
		 </div>
	</div>
</div>