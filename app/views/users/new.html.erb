<%= provide(:title, "Usuario Nuevo") %>
<div class="container">
<div class="page-header">
  <h1>Registro <small>Registro de usuario</small></h1>
  <div class="progress">
    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
    </div>
  </div>
</div>
  <%= form_for(@user, url:  plan_hospital_users_path, html: { class: "form-signin",
            style:"border-radius: 10px; background-color: #eeeeee;" })  do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <h2 class="form-signin-heading">Teclee sus datos</h2>
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre",
                                              required: true, autofocus: true %>   
    <%= f.text_field :nickname, class: "form-control", placeholder: "Nickname",
                                              required: true %>              
    <%= f.text_field :email, class: "form-control", placeholder: "Email",
                                              required: true %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password",
                                              required: true %>  
    <%= f.password_field :password_confirmation, class: "form-control", 
                                      placeholder: "ConfirmaciÃ³n Password", required: true %>  
    <%= f.submit "Guardar Datos", class: "btn btn-lg btn-primary btn-block" %> 
  <% end %>

</div> <!-- /container -->
