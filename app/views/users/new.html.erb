<%= provide(:title, "Usuario Nuevo") %>
<div class="container">

  <%= form_for(@user, html: { class: "form-signin" })  do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <h2 class="form-signin-heading">Porfavor Registrese</h2>
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre",
                                              required: true, autofocus: true %>    
    <%= f.text_field :email, class: "form-control", placeholder: "Email",
                                              required: true %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password",
                                              required: true %>  
    <%= f.password_field :password_confirmation, class: "form-control", 
                                      placeholder: "ConfirmaciÃ³n Password", required: true %>  
    <%= f.submit "Crear Cuenta", class: "btn btn-lg btn-primary btn-block" %> 
  <% end %>

</div> <!-- /container -->
