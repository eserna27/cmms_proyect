<%= provide(:title, "Usuario" ) %>
  <div class="page-header">
    <h2>
    	Bienvenido <small><%=  @user.name %></small>
    	<%= link_to "Editar", edit_user_path(@user),
                  class: "btn pull-right", style: "margin-right: 21px; color: cornflowerblue;
                    margin-top: 10px;" %>
    </h2>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <!-- <div class="row">
  		<div class="col-xs-16 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
