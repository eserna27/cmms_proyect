  	<div class="row">
  		<div class="col-md-12">
  			<div class="col-md-6 col-sm-12">
  				<div class="panel panel-default">
  					<div class="panel-heading">
              <h3 class="panel-title">Equipos<small> Ultimos creados</small>
              <%= link_to "Nuevo", new_hospital_equipment_path(current_hospital),
                  class: "btn pull-right", style: "margin-right: -10px; color: cornflowerblue; margin-top: -7px;" %>
              </h3>
            </div>
            <div class="panel-body">
            	<% if @equipments.empty? %>
            		No hay equipos
            	<% else %>
              <div class="table-responsive">
								<table class="table table-hover" style="margin-bottom: 0px;">
									<thead>
										<tr>
											<th>Modelo</th>
											<th>Subárea</th>
										</tr>
									</thead>
									<tbody>
										<% @equipments.each do |equipment| %>
											<tr onclick="location.href='<%= hospital_equipment_path(current_hospital, equipment) %>'">
												<td><%= equipment.model %></td>
												<td><%= equipment.subarea_name %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
              </div>
								<%= link_to "Todos", hospital_equipment_index_path(current_hospital), class: "btn pull-right" %>
							<% end %>
            </div>
  				</div>
  			</div>
  			<div class="col-md-6 col-sm-12">
  				<div class="panel panel-default">
  					<div class="panel-heading">
              <h3 class="panel-title">Áreas<small> Ultimas creadas</small>
              <%= link_to "Nueva", new_hospital_floor_area_path(@hospital, 1), :class => "btn pull-right", style: "margin-top: -8px; color: cornflowerblue;" %>
              </h3>
            </div>
            <div class="panel-body">
							<% if @areas.empty? %>
								No hay áreas
							<% else %>
              <div class="table-responsive">
								<table class="table table-hover table-responsive" style="margin-bottom: 0px;">
									<thead>
										<tr>
											<th>Nombre</th>
											<th>Piso</th>
											<th>Contacto</th>
											<th>Telefono</th>
										</tr>
									</thead>
									<tbody>
										<% @areas.each do |area| %>
											<tr>
												<td onclick="location.href='<%= hospital_floor_area_path(current_hospital, area.floor, area) %>'">
													<%= area.name %>
												</td>
												<td onclick="location.href='<%= hospital_floor_area_path(current_hospital, area.floor, area) %>'">
													<%= area.floor %>
												</td>
												<% if area.contact.nil? %>
													<td>Sin contacto</td>
													<td><%= link_to "Nuevo", new_hospital_area_contact_path(area.hospital_id, area), :class => "btn", style: "color: cornflowerblue;" %></td>
												<% else %>
													<td><%= area.contact.name %></td>
													<td><%= area.contact.phone %></td>
												<% end %>
											</tr>
										<% end %>
									</tbody>
								</table>
              </div>
								<%= link_to "Todas", hospital_floors_path(current_hospital), class: "btn pull-right" %>
		        	<% end %>
		       	</div>
  				</div>
  			</div>
  		</div>
  	</div>
  </div>
 </div>
