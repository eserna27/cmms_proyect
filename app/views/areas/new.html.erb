<%= provide(:title, "Nueva Area" ) %>
  <div class="page-header">
    <h1>
    	Nueva Área
    </h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
		 <div class="col-xs-13 col-md-9"> 
			 <%= form_for(@area) do |t| %>
	        <div class="modal-body">
	            <h2 class="form-signin-heading">Teclee los datos</h2>
	            <%= t.text_field :name, class: "form-control", placeholder: "Nombre con el que se conoce",
	                                                required: true, autofocus: true, style: "margin-bottom: 10px;" %>
	            <%= t.text_area :description, class: "form-control", placeholder: "Descripción breve de la función que realiza", style: "height: 145px; margin-bottom: 10px; "%>
	            <%= t.select :floor, @floors.map{ |b| [b, b] },{ :include_blank => "Seleccione Piso"}, {class: "form-control"} %>
	            <%= t.hidden_field :hospital_id, :value =>  @hospital.id %>
	        </div>
	        <div class="modal-footer">
	          <%= t.submit "Guardar", class: "btn btn-primary" %> 
	        </div>
	      <% end %>
		 </div>
	</div>
</div>