<%= provide(:title, "Entrar") %>
<div class="container", style="margin-top: 10px;">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <%= form_for(:session, url: login_path, html: { class: "form-signin",
              style:"border-radius: 10px; background-color: #eeeeee; padding: 20px;" })  do |f| %>
        <h2 class="form-signin-heading">Teclee sus datos</h2>
        <%= f.text_field :email, class: "form-control", placeholder: "Email",
                                                  required: true, autofocus: true,
                                                  style: "margin-bottom: 10px" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Contraseña",
                                                  required: true %>
        <%= link_to "(Se te olvido tu Contraseña)", new_password_reset_path %>
        <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Recordarme en esta computadora
              </label>
        </div>
        <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div> <!-- /container -->

<style>
  body {
    background-color: #596585;
  }
</style>
