<%= provide(:title, "Entrar") %>
<div class="container">

  <%= form_for(:session, url: login_path, html: { class: "form-signin" })  do |f| %>
    <h2 class="form-signin-heading">Teclee sus datos</h2> 
    <%= f.text_field :email, class: "form-control", placeholder: "Email",
                                              required: true, autofocus: true %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password",
                                              required: true %>  
    <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Recordarme en esta computadora
          </label>
    </div>
    <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block" %> 
     <p>¿Usuario Nuevo? <%= link_to "¡Registrate ahora!", signup_path %></p>
  <% end %>

 

</div> <!-- /container -->
