<%= provide(:title, "Plan") %>
  <div class="page-header">
    <h1>Planes <small>Tipo de Plan</small></h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <div class="col-xs-13 col-md-9"> 
      <div class="row">
        <% @plans.each do |plan| %>
          <div class="col-md-4">
            <div class="panel panel-success">
              <div class="panel-heading">
                <h4 class="text-center"><%= plan.name %></h4>
              </div>
              <div class="panel-body text-center">
                <p class="lead">
                  <strong><%= number_to_currency(plan.cost, :unit => "$") %>/ mes</strong>
                </p>
              </div>
              <ul class="list-group list-group-flush text-center">
              <%= markdown(plan.description) %>
              </ul>
              <div class="panel-footer">
              <% #Plan 1 plan mas bajo %>
                <%= link_to "Editar", edit_master_plan_path(current_user, plan.id), 
                                  class: "btn btn-lg btn-block btn-success" %> 
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>