<%= provide(:title, "Plan") %>
  <div class="page-header">
    <h1>Nuevo Plan <small>Datos</small></h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <div class="col-xs-13 col-md-9"> 
      <%= form_for(@plan)  do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <h2 class="form-signin-heading">Teclee datos del plan</h2>
        <%= f.text_field :name, class: "form-control", placeholder: "Nombre",
                                                  required: true, autofocus: true, style: "margin-bottom: 10px" %>
        <%= f.text_field :cost, class: "form-control", placeholder: "Costo",
                                                  required: true, style: "margin-bottom: 10px" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Descripción",
                                                  required: true, 
                                                  style: "height: 145px; margin-bottom: 10px"%>
        <%= f.text_field :max_equipment, class: "form-control", placeholder: "Maximos equipos",
                                                  required: true, style: "margin-bottom: 10px" %>
        <%= f.text_field :max_area, class: "form-control", placeholder: "Maximo Áreas",
                                                  required: true, style: "margin-bottom: 10px" %>                                  
        <%= f.submit "Guardar Plan", class: "btn btn-primary" %> 
      <% end %>
    </div>
  </div>
</div>