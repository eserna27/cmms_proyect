<%= provide(:title, "Nuevo Equipo") %>

  <div class="page-header">
    <h2>Nuevo Equipo <small>Teclee datos</small></h2>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <div class="col-xs-13 col-md-9"> 
      <div id="form_new_equipment" style="margin-top: 0;">
          <%= form_tag(@equipment, html: { class: "form-signin",
                  style:"border-radius: 10px; background-color: #eeeeee; max-width: none;" },
                  :multipart => true)  do  %>
              <table style="width: 100%">
                <tbody>
                  <tr>
                    <td>
                    <div id="equipment_type">
                      <%= render "equipment_type/equipment_type", equipment_types: @equipment_types  %>

                    </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                    <div id="brand">
                      <%= render "brands/brand", brands: @brands  %>
                    </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div id="model">
                        <%= text_field_tag "model","", class: "form-control", placeholder:"Modelo equipo" %>
                      </div>
                    </td>
                  </tr>
                   <tr>
                    <td>
                      <div id="serial_number">
                        <%= text_field_tag "serial_number","", class: "form-control", placeholder:"Numero de Serie" %>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div id="year_manufacture">
                        <%= text_field_tag "year_manufacture","", class: "form-control", placeholder:"Año de fabricación" %>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div id="lifetime">
                        <%= text_field_tag "lifetime","", class: "form-control", placeholder:"Vida útil" %>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                    <%= label_tag 'location', "Ubicación" %>
                      <div id="floor">
                        <%= select_tag "floor_number", options_for_select(@floors), include_blank: true, class: 'chosen-select', data: {placeholder: 'Seleccione Piso'} %>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div id="area">

                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div id="subarea">

                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
              <%= submit_tag "Guardar Plan", class: "btn btn-primary", style: "margin-top: 15px;" %> 
          <% end %>
      </div>
    </div>
    <div class="col-xs-4 col-md-2" id="new_types">
      <table style="width: 100%" id="new_types_table">
        <tbody>
          <tr>
            <td>
              <%= render "equipment_type/new_equipment_type" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= render "brands/new_brand" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= render "areas/new_area" %>
            </td>
          </tr>
          <tr>
            <td id="new_subarea">

            </td>
          </tr>
        </tbody>
      </table>      
    </div>
  </div>
</div>