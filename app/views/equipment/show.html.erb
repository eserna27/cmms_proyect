<%= provide(:title, @equipment.model ) %>
  <div class="page-header">
    <h1>
    <%=  @equipment.model %> <small><strong> ID: </strong><%= @equipment.id_list %></small>
    <%= link_to "Editar", edit_hospital_equipment_path(@hospital, @equipment), 
                  class: "btn pull-right", style: "margin-right: 21px; color: cornflowerblue; 
                    margin-top: 10px;" %> 
    </h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <div class="row">
      <div class="col-xs-16 col-sm-12">
        <div class="col-xs-6 col-sm-4" id="equipment_data">
          <div class="panel panel-default" style="border-color: #eeeeee;">
            <div class="panel-body" style="background: #eeeeee;">   
              <% if @equipment.image_url.to_s != "" %>
                <%= image_tag @equipment.image_url.to_s, alt:"148x148", 
                  style: "width: 148px; height: 148px; margin-left: 21%; background: white;"%> 
              <% else %>
                <%= image_tag("stethoscope6.png", data_src: "holder.js/148x148", alt:"80x80", style: "height: 148px;")%>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4" id="equipment_data">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Datos del equipo</h3>
            </div>
            <div class="panel-body">
            <ul>
              <li><strong>Modelo: </strong><%= @equipment.model %></li>
              <li><strong>Num: Serie: </strong><%= @equipment.serial_number %></li>
              <li><strong>Año de Fabricación: </strong><%= @equipment.year_manufacture %></li>
              <li><strong>Tiempo de vida: </strong><%= @equipment.lifetime %> Años</li>
              <li><strong>Marca: </strong><%= @equipment.brand_name %></li>
            </ul>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4" id="equipment_data">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Tipo de Equipo</h3>
            </div>
            <div class="panel-body">
            <ul>
              <li><strong>Tipo: </strong><%= @equipment.equipment_type_name %></li>
              <li><strong>Descripción: </strong><%= @equipment.equipment_type.description %></li>
              <li><strong>Cuadro Basico: </strong><%= @equipment.cuadro_basico %></li>
              <li><strong>UMDNS: </strong><%= @equipment.umdns %></li>
              <li><strong>GMND: </strong><%= @equipment.gmnd %></li>
            </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row" id="info_idex">
      <div class="col-xs-16 col-sm-12">
        <div class="page-header">
          <h4 style="margin-left: 15px;">
          Información Área
          <%= link_to "Ver Área", hospital_floor_area_path(@hospital, @area.floor, @area),
            class: "btn pull-right", style: "margin-top: -10px; color: cornflowerblue;margin-right: 10px;" %>
          </h4>
        </div>
        <div class="col-xs-8 col-sm-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Ubicación</h3>
            </div>
            <div class="panel-body">
            <ul>
              <li><strong>Piso: </strong><%= @equipment.subarea.area.floor %></li>
              <li><strong>Área: </strong><%= @equipment.subarea.area_name %></li>
              <li><strong>Subárea: </strong><%= @equipment.subarea_name %></li>
            </ul>
            </div>
          </div>
        </div>
        <div class="col-xs-8 col-sm-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Contacto</h3>
            </div>
            <div class="panel-body">
              <% if !@contact.nil? %>
              <ul>
                <li><strong>Nombre: </strong><%= @contact.name %></li>
                <li><strong>Email: </strong><%= @contact.email %></li>
                <li><strong>Telefono: </strong><%= @contact.phone %></li>
              </ul>
              <% else %>
                Sin Contacto
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>