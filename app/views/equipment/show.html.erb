<%= provide(:title, @equipment.model ) %>
  <div class="page-header">
    <h1>
    <%= image_tag @equipment.image_url.to_s, data_src: "holder.js/100x100", alt:"100x100", style: "width: 100px; margin-top: -45px; margin-right: 10px; height: 100px;", class: "pull-left"%>
      <%=  @equipment.model %> <small>Datos</small>
    </h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
    <div class="row">
      <div class="col-xs-6 col-sm-4" id="equipment_data">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Datos del equipo</h3>
          </div>
          <div class="panel-body">
          <ul>
            <li><strong>Modelo: </strong><%= @equipment.model %></li>
            <li><strong>Num: Serie: </strong><%= @equipment.serial_number %></li>
            <li><strong>Año de Fabricación: </strong><%= @equipment.year_manufacture %></li>
            <li><strong>Tiempo de vida: </strong><%= @equipment.lifetime %> Años</li>
            <li><strong>Marca: </strong><%= @equipment.brand_name %></li>
          </ul>
          </div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4" id="equipment_data">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Tipo de Equipo</h3>
          </div>
          <div class="panel-body">
          <ul>
            <li><strong>Tipo: </strong><%= @equipment.equipment_type_name %></li>
            <li><strong>Descripción: </strong><%= @equipment.equipment_type.description %></li>
            <li><strong>Cuadro Basico: </strong><%= @equipment.cuadro_basico %></li>
            <li><strong>UMDNS: </strong><%= @equipment.umdns %></li>
            <li><strong>GMND: </strong><%= @equipment.gmnd %></li>
          </ul>
          </div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4" id="equipment_data">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Ubicación</h3>
          </div>
          <div class="panel-body">
          <ul>
            <li><strong>Piso: </strong><%= @equipment.subarea.area.floor %></li>
            <li><strong>Área: </strong><%= @equipment.subarea.area_name %></li>
            <li><strong>Subárea: </strong><%= @equipment.subarea_name %></li>
          </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>