<%= provide(:title, "Constraseña Olvidada") %>
<div class="container", style="margin-top: 10px">

  <%= form_for(@user, url: password_reset_path(params[:id]), html: { class: "form-signin",
            style:"border-radius: 10px; background-color: #eeeeee;" })  do |f| %>
    <h2 class="form-signin-heading">Recuperar Contraseña</h2> 
    <%= hidden_field_tag :email, @user.email %>
    <%= f.password_field :password, class: "form-control", placeholder: "Constraseña", required: true %>
    <%= f.password_field :password_confirmation, 
    				class: "form-control", placeholder: "Confirmación Constraseña", required: true %>
    <%= f.submit "Actualizar", class: "btn btn-primary btn-block" %> 
  <% end %>
</div> 
