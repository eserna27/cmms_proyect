<%= provide(:title, "Constraseña Olvidada") %>
<div class="container", style="margin-top: 10px">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <%= form_for(:password_reset, url: password_resets_path, html: { class: "form-signin",
                style:"border-radius: 10px; background-color: #eeeeee; padding: 20px;" })  do |f| %>
        <h2 class="form-signin-heading">Recuperar Contraseña</h2>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "Email",  required: true %>
        </div>
        <%= f.submit "Entrar", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #596585;
  }
</style>
