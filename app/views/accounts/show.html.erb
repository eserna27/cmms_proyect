<%= provide(:title, "Cuenta") %>

<div class="page-header">
  <h1>Datos Cuenta</h1>
</div>


<div class="jumbotron" style="border-radius: 15px; padding: 1px 15px 15px 15px;">
    <div class="container" style="margin-top: 27px;">
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail" style="border-radius: 15px;">
            <div class="caption">
              <div class="page-header" style="margin: 0px 0 20px;">
                <h2 style="margin-top: 5px;">Plan <small><%= @plan.name %></small></h2>
              </div>
              <p>
              <h3>Descripción</h3>
                <ul>
                  <%= markdown(@plan.description) %>
                </ul>
              </p>
              <p>
              <h3>Costo/mensual</h3>
                <ul>
                  <strong><%= number_to_currency(@plan.cost, :unit => "$") %>/ mes</strong>
                </ul>
              </p>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="thumbnail" style="border-radius: 15px;">
            <div class="caption">
              <div class="page-header" style="margin: 0px 0 20px;">
                <h2 style="margin-top: 5px;">Hospital <small><%= @hospital.name %></small></h2>
              </div>
              <p>
              <h3>Dirección</h3>
                <h4>Calle: <small><%= @hospital.street %></small></h4>
                <h4>Numero: <small><%= @hospital.number %></small></h4>
                <h4>C.P.: <small><%= @hospital.postal_code %></small></h4>
                <h4>Ciudad: <small><%= @hospital.city %></small></h4>
                <h4>Estado: <small><%= @hospital.state %></small></h4>
                <h4>Pais: <small><%= @hospital.country %></small></h4>
              </p>
            </div>
          </div>
        </div>

          <div class="col-sm-6 col-md-4">
          <div class="thumbnail" style="border-radius: 15px;">
            <div class="caption">
              <div class="page-header" style="margin: 0px 0 20px;">
                <h2 style="margin-top: 5px;">Usuario <small><%= @user.name %></small></h2>
              </div>
              <p>
              <h3>Email: <small><%= @user.email %></small></h3>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
