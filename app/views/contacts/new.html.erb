<%= provide(:title, "Nuevo Contacto" ) %>
  <div class="page-header">
    <h1>
    	Nuevo Contacto
    </h1>
  </div>
<div class="jumbotron" style="padding: 25px 0;">
  <div class="container" style="margin-top: 0;">
		 <div class="col-xs-13 col-md-9"> 
			 <%= form_for(@contact) do |t| %>
	        <div class="modal-body">
	            <h2 class="form-signin-heading">Teclee los datos</h2>
	            <%= t.text_field :name, class: "form-control", placeholder: "Nombre",
	                                                required: true, autofocus: true, style: "margin-bottom: 10px;" %>
	            <%= t.text_field :email, class: "form-control", placeholder: "Email",
	                                                required: true, autofocus: true, style: "margin-bottom: 10px;" %>
	           	<%= t.text_field :phone, class: "form-control", placeholder: "Telefono",
	                                                required: true, autofocus: true, style: "margin-bottom: 10px;" %>
	            <%= t.hidden_field :area_id, :value =>  @area.id %>
	            <%= t.hidden_field :hospital_id, :value =>  @area.hospital_id %>
	        </div>
	        <div class="modal-footer">
	         <%= t.submit "Guardar", class: "btn btn-primary" %> 
	        </div>
	      <% end %>
		 </div>
	</div>
</div>
