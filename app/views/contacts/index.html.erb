  	  			<td class="text-center"><strong>Editar</strong></td>
  	  		</tr>
  	  	</thead>
  	  	<tbody>
  			<% @contacts.each do |contact| %>
  				<tr>
  					<td class="text-center"><%= contact.area_name %></td>
  					<td class="text-center"><%= contact.name %></td>
  					<td class="text-center"><%= contact.phone %></td>
  					<td class="text-center"><%= contact.email %></td>
  					<td class="text-center"><%= link_to "Editar", edit_hospital_area_contact_path(current_hospital, contact.area_id, contact), :class => "btn", style: "margin-top: -8px; color: cornflowerblue;" %></td>
  				</div>
  				</tr>
  			<% end %>
  			</tbody>
  		</table>
    </div>
	</div>
